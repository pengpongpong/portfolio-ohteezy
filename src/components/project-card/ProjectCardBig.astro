---
interface Props {
  sketch1: string;
  sketch1Alt: string;
  sketch2: string;
  sketch2Alt: string;
  poster: string;
  posterAlt: string;
}

const { sketch1, sketch2, poster, sketch1Alt, sketch2Alt, posterAlt }: Props =
  Astro.props;
---

<div
  class="mt-8 max-w-[2000px] mx-auto flex flex-col xl:flex-row gap-12 xl:gap-8"
>
  <div class="w-full h-full flex flex-col gap-8 xl:gap-auto">
    <div class="h-full relative">
      <img width={1760} height={2400} class="w-full h-full object-contain" src={sketch1} alt={sketch1Alt} />
      <svg
        class="hidden xl:inline-block my-2 w-[100px] xl:w-[250px] h-[100px] -rotate-90 -scale-x-100 absolute top-72 -left-10 xl:left-auto xl:top-1/2 xl:-right-40 xl:rotate-[40deg] xl:scale-x-100 xl:-scale-y-100"
        viewBox="0 0 408 84"
        version="1.1"
        width="408"
        height="84"
        xmlns:xlink="http://www.w3.org/1999/xlink"
        xmlns="http://www.w3.org/2000/svg"
      >
        <defs id="defs1"></defs>
        <image
          width="408"
          height="84"
          xlink:href="data:image/png;base64,"
          id="image1"
          x="0"
          y="0"
        />
      </svg>
    </div>

    <div class="h-full relative">
      <img width={1760} height={2400} class="w-full h-full object-contain" src={sketch2} alt={sketch2Alt} />
      <svg
        class="my-2 w-[100px] xl:w-[250px] h-[100px] -rotate-[75deg] -scale-x-100 absolute -bottom-14 xl:bottom-auto -left-14 xl:left-auto xl:top-1/2 xl:-right-44 xl:-rotate-[15deg] xl:scale-x-100"
        viewBox="0 0 408 84"
        version="1.1"
        width="408"
        height="84"
        xmlns:xlink="http://www.w3.org/1999/xlink"
        xmlns="http://www.w3.org/2000/svg"
      >
        <defs id="defs1"></defs>
        <image
          width="408"
          height="84"
          xlink:href="data:image/png;base64,"
          id="image1"
          x="0"
          y="0"
        />
      </svg>
    </div>
  </div>

  <div class="w-full h-full">
    <img width={1816} height={5800} class="w-full h-auto object-contain" src={poster} alt={posterAlt} />
  </div>
</div>
