---
import Layout from "@layouts/Layout.astro";

import Navbar from "@components/navbar/Navbar";
import Legal from "@components/legal/Legal.astro";
import Footer from "@components/footer/Footer.astro";

import { getNavbar } from "@utils/query";

const { pathname } = Astro.url;

const navData = await getNavbar();

const seo = {
  title: "Impressum | Oh Teezy",
  description:
    "Erfahren Sie mehr Ã¼ber das Impressum dieser Website. Hier finden Sie rechtliche Informationen, Kontaktinformationen und Angaben zum Betreiber, um sicherzustellen, dass Sie alle erforderlichen rechtlichen Angaben haben.",
  keywords:
    "Impressum Kontaktinformationen Betreiber Website-Informationen rechtliche Angaben rechtliche Informationen Anbieterkennzeichnung",
